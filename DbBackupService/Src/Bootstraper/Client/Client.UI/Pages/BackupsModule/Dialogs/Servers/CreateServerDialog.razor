@using Client.UI.Data.Services
@using Modules.Backup.Shared.Dtos
@using Modules.Backup.Shared.Enums

@inject ISnackbar SnackBar
@inject BackupsHttpClientService Service

<MudDialog>
    <DialogContent>
        <EditForm Model="_server" OnValidSubmit="Save"
                  OnInvalidSubmit="@(() => SnackBar.Add("Please check entered data", Severity.Warning))">
            <DataAnnotationsValidator />

            <MudCard Elevation="3" Class="pa-4 rounded-2xl mb-5">
                <MudCardContent>
                    <MudGrid Spacing="3">
                        <MudItem xs="12">
                            <MudTextField Label="Connection Name" Disabled="@_isCreating"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Title"
                                          @bind-Value="_server.ConnectionName" />
                        </MudItem>

                        <MudItem xs="12" sm="8">
                            <MudTextField Label="Server Host" Disabled="@_isCreating"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Dns"
                                          @bind-Value="_server.ServerHost" />
                        </MudItem>
                        <MudItem xs="12" sm="4">
                            <MudNumericField T="short" Disabled="@_isCreating"
                                             Label="Port"
                                             Adornment="Adornment.Start"
                                             AdornmentIcon="@Icons.Material.Filled.Router"
                                             @bind-Value="_server.ServerPort" />
                        </MudItem>

                        <MudItem xs="12" sm="6">
                            <MudTextField Label="Database Name" Disabled="@_isCreating"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.DataObject"
                                          @bind-Value="_server.DbName" />
                        </MudItem>

                        <MudItem xs="12" sm="6">
                            <MudSelect @bind-Value="_server.DbType" Label="Database Type" Disabled="@_isCreating">
                                <MudSelectItem Value="DatabaseType.MySql">MySQL</MudSelectItem>
                                <MudSelectItem Value="DatabaseType.PostgreSql">PostgreSQL</MudSelectItem>
                                <MudSelectItem Value="DatabaseType.SqlServer">SQL Server</MudSelectItem>
                            </MudSelect>
                        </MudItem>

                        <MudItem xs="12" sm="6">
                            <MudTextField Label="DB User" Disabled="@_isCreating"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Person"
                                          @bind-Value="_server.DbUser" />
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudTextField Label="Password" Disabled="@_isCreating"
                                          InputType="InputType.Password"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Lock"
                                          @bind-Value="_server.DbPasswd" />
                        </MudItem>

                        <MudItem xs="12">
                            <MudSwitch T="bool" @bind-Value="_server.IsTunnelRequired" Disabled="@_isCreating"
                                       Label="Use SSH Tunnel?" Color="Color.Primary" />
                        </MudItem>

                        @if (_server.IsTunnelRequired)
                        {
                            <MudItem xs="12">
                                <MudPaper Class="pa-4 rounded-xl mud-elevation-1">
                                    <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="mb-3">
                                        Tunnel configuration
                                    </MudText>
                                    <MudGrid Spacing="3">
                                        <MudItem xs="12" sm="6">
                                            <MudTextField Label="Tunnel Host" Disabled="@_isCreating"
                                                          Adornment="Adornment.Start"
                                                          AdornmentIcon="@Icons.Material.Filled.Dns"
                                                          @bind-Value="_server.Tunnel!.ServerHost" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudTextField Label="Tunnel Username" Disabled="@_isCreating"
                                                          Adornment="Adornment.Start"
                                                          AdornmentIcon="@Icons.Material.Filled.Person"
                                                          @bind-Value="_server.Tunnel!.Username" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudTextField Label="Tunnel Password" Disabled="@_isCreating"
                                                          InputType="InputType.Password"
                                                          Adornment="Adornment.Start"
                                                          AdornmentIcon="@Icons.Material.Filled.Lock"
                                                          @bind-Value="_server.Tunnel!.Password" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudTextField Label="Private Key (PEM)"
                                                          Lines="4" Disabled="@_isCreating"
                                                          Placeholder="Paste private key here..."
                                                          @bind-Value="_server.Tunnel!.PrivateKeyContent" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudNumericField T="int" Disabled="@_isCreating"
                                                             Label="SSH Port"
                                                             @bind-Value="_server.Tunnel!.SshPort" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudNumericField T="int" Disabled="@_isCreating"
                                                             Label="Local Forward Port" 
                                                             @bind-Value="_server.Tunnel!.LocalPort" />
                                        </MudItem>
                                    </MudGrid>
                                </MudPaper>
                            </MudItem>
                        }
                    </MudGrid>
                </MudCardContent>
            </MudCard>

            <MudContainer Class="d-flex justify-between pa-4">
                <MudButton OnClick="Cancel" Variant="Variant.Text" Color="Color.Default" Disabled="@_isCreating">Cancel</MudButton>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" Disabled="@_isCreating">Save</MudButton>
            </MudContainer>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    private ServerConnectionDto _server = new()
    {
        Id = Guid.CreateVersion7(),
        ConnectionName = "",
        ServerHost = "",
        ServerPort = 3306,
        DbName = "",
        DbUser = "",
        DbPasswd = "",
        Tunnel = new()
    };

    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    private bool _isCreating;
    
    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        _isCreating = true;
        
        var result = await Service.CreateServerAsync(_server);
        
        result.Switch(
            success =>
            {
                SnackBar.Add("Server created successfully", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            },
            error => SnackBar.Add(error, Severity.Error)
        );

        _isCreating = false;
    }
}
