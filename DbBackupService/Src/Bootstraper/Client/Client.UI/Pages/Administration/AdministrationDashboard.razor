@page "/administration/dashboard"

<PageTitle>Administration Dashboard</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-6">
    <MudText Typo="Typo.h4" Color="Color.Primary" Class="mb-6">Panel Administracyjny</MudText>
    
    <!-- Statystyki w kartach -->
    <MudGrid GutterSize="3">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Użytkownicy</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">124</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Grupy uprawnień</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">5</MudText>
            </MudPaper>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Serwery</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">18</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Tunele</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">7</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Backupy</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">2 354</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Średnio backupów w miesiącu</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">80</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Ilość zrobionych testów</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">1743</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Testy udane</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">96%</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>