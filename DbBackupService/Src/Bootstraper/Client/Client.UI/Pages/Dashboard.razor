@page "/dashboard"
@using Client.UI.Data.Services

@inject AuthStateProvider Auth

<PageTitle>Dashboard</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-6">
    <MudText Typo="Typo.h4" Color="Color.Primary" Class="mb-6">My Dashboard</MudText>

    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Moje Role</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">Admin, User</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Moje Grupy</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">Localhost, Domain, Test</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Obsługiwane Serwery</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">4</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Moje Tunele</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">2</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Backupy</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">245</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Średnio backupów w miesiącu</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">20</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Ilość zrobionych testów</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">180</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4 mud-elevation-2 rounded-2xl d-flex flex-column align-center">
                <MudText Typo="Typo.h6">Testy udane</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">94%</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code{

    protected override async Task OnInitializedAsync()
    {
        await Auth.AuthorizeUser(returnPageAfterValidPasswordAuthorization: "dashboard");
    }

}